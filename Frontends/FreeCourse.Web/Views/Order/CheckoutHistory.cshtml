@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">

    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödeme geçmişim</h5>

                @if (Model.Any())
                {

                    <table class="table table-striped table-bordered">

                        <tr>
                            <th>Sipariş(ödeme) no</th>
                            <th>Satın alma tarih</th>
                            <th>Detaylar</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">

                                        <tr>
                                            <th>Kurs ismi</th>
                                            <th>Kurs fiyat</th>
                                        </tr>
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>@orderItem.Price TL</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>

                }
                else
                {
                    <div class="alert alert-info">Satın aldığınız herhangi bir kurs bulunmamaktadır.</div>
                }
            </div>
        </div>
    </div>
</div>